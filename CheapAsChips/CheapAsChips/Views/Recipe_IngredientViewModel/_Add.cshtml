@model CheapAsChips.Models.Recipe_IngredientViewModel


@using (Html.BeginForm("_Add")) 
{
 
      

    <div class="form-horizontal">
        <h4>Add Ingredients</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       

       
        <div class="form-group">
            @Html.LabelFor(model => model.Recipe_Ingredient.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.Recipe_Ingredient.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Recipe_Ingredient.Name, "", new { @class = "text-danger" })
            </div>
        </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Recipe_Ingredient.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    @Html.EditorFor(model => model.Recipe_Ingredient.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Recipe_Ingredient.Quantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Recipe_Ingredient.Measure, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    @Html.EditorFor(model => model.Recipe_Ingredient.Measure, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Recipe_Ingredient.Measure, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add" class="btn btn-default" />
                </div>
            </div>

        </div>
}

